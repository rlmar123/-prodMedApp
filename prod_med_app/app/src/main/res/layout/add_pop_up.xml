<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_centerHorizontal="true"
                android:text="Add a Medication"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:textStyle="italic">

            </TextView>

            <EditText
                android:id="@+id/medication_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:hint="Medication Name : "
                android:inputType="textAutoComplete">

            </EditText>

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/medication_name"
                android:hint="Doctor First Name :"
                android:inputType="textAutoComplete">

            </EditText>

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_name"
                android:hint="Doctor Last Name :"
                android:inputType="textAutoComplete">

            </EditText>

            <EditText
                android:id="@+id/amount_of_pills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_name"
                android:hint="Amount of Pills : "
                android:inputType="number">

            </EditText>

            <EditText
                android:id="@+id/number_of_refills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount_of_pills"
                android:hint="Amount of Refills : "
                android:inputType="number">

            </EditText>

       <!--     <Button
                android:id="@+id/the_save_button"
                android:background="@color/colorAccent"
                android:layout_marginEnd="5dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="@string/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/the_item_size"
                >

            </Button>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>